CompileFlags:
  Add: [
    # CMSIS include paths
    -IC:./Firmware/CMSIS/GD/GD32H7xx/Include,

    # GD32H7xx standard peripheral library include paths
    -IC:./Firmware/GD32H7xx_standard_peripheral/Include,

    # FreeRTOS include paths
    -IC:./FreeRtos/kernel/include,
    -IC:./FreeRtos/kernel/portable/GCC/ARM_CM7/r0p1,
    -IC:./FreeRtos/kernel/portable/MemMang,

    # Driver include paths
    -IC:./Driver,
    -IC:./Driver/can,
    -IC:./Driver/usart,

    # Library include paths
    -IC:./Lib/cli,
    -IC:./Lib/converter,
    -IC:./Lib/logging,
    -IC:./Lib/ring_buffer,
    -IC:./Lib/utilities,

    # lwIP include paths
    -IC:./Lib/lwip_2_2_1/src/include,
    -IC:./Lib/lwip_2_2_1/contrib/ports/GD32H7xx/FreeRTOS,
    -IC:./Lib/lwip_2_2_1/contrib/ports/GD32H7xx/include,

    # User code include paths
    -IC:./User,
    -IC:./App,
    -IC:./App/config,
    -IC:./App/tcp,

    # Macro definitions for GD32H7XX
    -DGD32H7XX,
    -DGD32H759,

    # Compiler definition
    -D__GNUC__,

    # Disable specific warnings
    -Wno-deprecated-declarations,

    # Disable MSVC secure warnings
    -D_CRT_SECURE_NO_WARNINGS,
  ]

Diagnostics:
  Suppress: [
    "missing_include_dirs",
    "pp_file_not_found",
  ]

Index:
  Background: true
  StandardLibrary: false

# Add source file paths for proper code navigation
InlayHints:
  Enabled: true
  ParameterNames: true
  BlockEnd: true
